generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id                    String   @id @default(uuid())
  name                  String
  phone                 String   // Customer Phone (Airtel Number)
  alternativePhone      String?  // Customer Alternative Number
  email                 String?
  source                String
  status                String   @default("NEW") // NEW, QUALIFIED, SUBMITTED, FAILED
  tags                  String?
  
  // Airtel Form Fields
  preferredPackage      String?  // 5G_15Mbps or 5G_30Mbps
  installationTown      String?
  deliveryLocation      String?  // Nearest Landmark
  preferredDate         DateTime?
  preferredTime         String?  // Morning, Afternoon, Evening
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  submissions           Submission[]
}

model Submission {
  id        String   @id @default(uuid())
  leadId    String
  lead      Lead     @relation(fields: [leadId], references: [id])
  status    String
  response  String?
  createdAt DateTime @default(now())
}

model Config {
  key       String   @id
  value     String
}

model Analytics {
  id        String   @id @default(uuid())
  date      DateTime @default(now())
  metric    String
  value     Float
}
