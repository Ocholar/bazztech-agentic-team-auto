{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "src/dashboard/Dockerfile",
        "watchPatterns": [
            "src/dashboard/**"
        ]
    },
    "deploy": {
        "startCommand": "cd src/dashboard && npx prisma migrate deploy && node server.js",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}